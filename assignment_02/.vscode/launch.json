{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch", // or "(lldb) Launch" on macOS
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/raytrace.exe", // Path to your compiled executable
            "args": ["../../scenes/mirror/mirror.sce", "mirror10.tga"], // Command-line arguments
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Set to true to use an external console for input/output
            "MIMode": "gdb", // or "lldb" on macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // This tells VSCode to build the project before debugging
            "internalConsoleOptions": "neverOpen",
            "miDebuggerPath": "/usr/bin/gdb.exe"
        }
    ]
}